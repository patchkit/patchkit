{
  "name": "patchkit",
  "version": "1.0.0",
  "description": "Patchwork UI elements",
  "main": "index.js",
  "dependencies": {
    "history": "^1.13.1",
    "moment": "^2.12.0",
    "react": "^0.14.6",
    "react-addons-test-utils": "^0.14.6",
    "react-dom": "^0.14.6",
    "react-router": "^1.0.2",
    "ssb-ref": "^2.3.0"
  },
  "devDependencies": {
    "babel": "^6.3.26",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "less": "^2.5.3",
    "nodemon": "^1.8.1",
    "tape": "^4.5.1",
    "watchify": "^3.7.0"
  },
  "scripts": {
    "demo": "npm run demo-server & npm run demo-js & npm run demo-css",
    "demo-server": "(cd ./demo && python -m SimpleHTTPServer)",
    "demo-js": "NODE_ENV=development watchify ./demo/index.jsx --extension=.jsx -o ./demo/index.build.js -v --debug",
    "demo-css": "nodemon -q -e less -w ./ -x 'lessc --verbose ./demo/index.less ./demo/index.build.css'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ssbc/patchkit.git"
  },
  "keywords": [
    "react",
    "ui",
    "patchwork"
  ],
  "author": "Paul Frazee <pfrazee@gmail.com>",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/ssbc/patchkit/issues"
  },
  "homepage": "https://github.com/ssbc/patchkit#readme",
  "browserify": {
    "transform": [
      [
        "envify",
        {
          "global": true
        }
      ],
      [
        "babelify",
        {
          "presets": [
            "es2015",
            "stage-0",
            "react"
          ]
        }
      ]
    ]
  }
}
